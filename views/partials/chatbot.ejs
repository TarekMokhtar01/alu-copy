<!-- Floating Chatbot UI -->
<link rel="stylesheet" href="/css/main.css">
<style>
  :root {
    --chatbot-popup-height: 420px;
    --chatbot-messages-max-height: 300px;
  }
  .chatbot-fab {
    position: fixed;
    bottom: 32px;
    right: 32px;
    width: 64px;
    height: 64px;
    background: #4f8cff;
    border-radius: 50%;
    box-shadow: 0 4px 16px rgba(0,0,0,0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    font-size: 2rem;
    cursor: pointer;
    z-index: 1000;
    transition: background 0.2s;
  }
  .chatbot-fab:hover {
    background: #2563eb;
  }
  .chatbot-popup {
    position: fixed;
    bottom: 110px;
    right: 32px;
    width: 350px;
    max-width: 90vw;
    background: #fff;
    border-radius: 18px;
    box-shadow: 0 8px 32px rgba(0,0,0,0.25);
    display: none;
    flex-direction: column;
    overflow: hidden;
    z-index: 1001;
    animation: chatbot-pop 0.3s cubic-bezier(.4,2,.6,1) forwards;
    height: var(--chatbot-popup-height);
  }
  @keyframes chatbot-pop {
    0% { transform: scale(0.7); opacity: 0; }
    100% { transform: scale(1); opacity: 1; }
  }
  .chatbot-popup.active {
    display: flex;
  }
  .chatbot-header {
    background: #4f8cff;
    color: #fff;
    padding: 16px;
    font-weight: bold;
    font-size: 1.1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .chatbot-close {
    cursor: pointer;
    font-size: 1.3rem;
    opacity: 0.8;
    transition: opacity 0.2s;
  }
  .chatbot-close:hover {
    opacity: 1;
  }
  .chatbot-messages {
    flex: 1;
    padding: 16px;
    background: #f6f8fa;
    overflow-y: auto;
    max-height: var(--chatbot-messages-max-height);
  }
  .chatbot-input {
    display: flex;
    border-top: 1px solid #eee;
    background: #fff;
  }
  .chatbot-input input {
    flex: 1;
    border: none;
    padding: 12px;
    font-size: 1rem;
    outline: none;
    background: transparent;
  }
  .chatbot-input button {
    background: #4f8cff;
    color: #fff;
    border: none;
    padding: 0 18px;
    font-size: 1.1rem;
    cursor: pointer;
    transition: background 0.2s;
    border-radius: 0 0 18px 0;
  }
  .chatbot-input button:hover {
    background: #2563eb;
  }
  .chatbot-message {
    margin-bottom: 12px;
    display: flex;
    align-items: flex-end;
  }
  .chatbot-message.user {
    justify-content: flex-end;
  }
  .chatbot-message.bot {
    justify-content: flex-start;
  }
  .chatbot-bubble {
    padding: 10px 16px;
    border-radius: 16px;
    background: #e5e7eb;
    color: #222;
    max-width: 75%;
    font-size: 0.98rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.04);
  }
  .chatbot-message.user .chatbot-bubble {
    background: #4f8cff;
    color: #fff;
  }
</style>

<div class="chatbot-fab" id="chatbotFab" title="Chat with us">
  <span>ðŸ’¬</span>
</div>
<div class="chatbot-popup" id="chatbotPopup">
  <div class="chatbot-header">
    Chatbot
    <span class="chatbot-close" id="chatbotClose">&times;</span>
  </div>
  <div class="chatbot-messages" id="chatbotMessages">
    <div class="chatbot-message bot">
      <div class="chatbot-bubble">Hi! How can I help you today?</div>
    </div>
  </div>
  <form class="chatbot-input" id="chatbotForm" autocomplete="off">
    <input type="text" id="chatbotInput" placeholder="Type your message..." required />
    <button type="submit">Send</button>
  </form>
</div>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
  const fab = document.getElementById('chatbotFab');
  const popup = document.getElementById('chatbotPopup');
  const closeBtn = document.getElementById('chatbotClose');
  const form = document.getElementById('chatbotForm');
  const input = document.getElementById('chatbotInput');
  const messages = document.getElementById('chatbotMessages');

  fab.onclick = () => popup.classList.add('active');
  closeBtn.onclick = () => popup.classList.remove('active');

  form.onsubmit = async (e) => {
    e.preventDefault();
    const text = input.value.trim();
    if (!text) return;
    addMessage('user', text);
    input.value = '';
    try {
      const res = await axios.post('/api/chatbot', { message: text });
      addMessage('bot', res.data.reply);
    } catch (err) {
      addMessage('bot', 'Sorry, there was an error connecting to the AI.');
    }
  };

  function addMessage(sender, text) {
    const msg = document.createElement('div');
    msg.className = 'chatbot-message ' + sender;
    const bubble = document.createElement('div');
    bubble.className = 'chatbot-bubble';
    bubble.textContent = text;
    msg.appendChild(bubble);
    messages.appendChild(msg);
    messages.scrollTop = messages.scrollHeight;
  }
</script>
